<script type="text/javascript">
	$(function() {
		$('#nav').focus().on('keypress', function(e) {
			var p = e.which;
			if (p === 13) {
				$('#formNav').submit();
			}
		});

		$("#nav").dblclick(function() {
			$('#formNav').submit();
		});
	});
</script>

